{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Parallels Desktop Api",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/src/main.go",
      // Comment out if you do not need to setup environment variables for the module
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "${input:debug_command}",
      ]
    },
    {
      "name": "Parallels Desktop PdFile Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/src/main.go",
      // Comment out if you do not need to setup environment variables for the module
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "push",
        "${workspaceFolder}/.local/pdfiles/build-empty-machine.aws.push.pdfile",
      ]
    },
    {
      "name": "Parallels Desktop Manual Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/src/main.go",
      // Comment out if you do not need to setup environment variables for the module
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "install",
        "parallels-desktop",
        "--license="
      ]
    },
    {
      "name": "Debug in Container",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "",
      "port": 40000,
      "host": "127.0.0.1",
      "showLog": true,
      "apiVersion": 2,
      "trace": "log",
      "logOutput": "rpc",
    }
  ],
  "inputs": [
    {
      "id": "debug_command",
      "type": "pickString",
      "options": [
        "api",
        "catalog",
        "reverse-proxy",
        "test"
      ],
      "default": "api",
      "description": "Select the command to debug"
    },
    {
      "id": "catalog_command",
      "type": "pickString",
      "options": [
        "run",
        "push",
        "pull",
        "import",
        "list"
      ],
      "default": "run",
      "description": "Select the catalog command to debug"
    },
    {
      "id": "catalog_pdfile",
      "type": "promptString",
      "default": "${workspaceFolder}/out/binaries/test.local.pdfile",
      "description": "Enter the path to the pdfile"
    }
  ]
}